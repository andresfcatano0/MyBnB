<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Accommodation</h1>
  <div class="col-6 offset-3">
    <form action="/accommodations" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="accommodation[title]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="accommodation[location]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" id="image" name="accommodation[image]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Accommodation Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input class="form-control" type="number" id="price" name="accommodation[price] placeholder="0.00" aria-label="price" aria-describedby="price-label">
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="accommodation[description]"></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Accommodation</button>
      </div>
    </form>
    <a href="/accommodations">All Accommodations</a>
  </div>
</div>