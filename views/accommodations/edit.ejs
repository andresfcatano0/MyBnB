<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Accommodation</h1>
  <div class="col-6 offset-3">
    <form action="/accommodations/<%= accommodation._id %>?_method=PUT" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="accommodation[title]" value="<%= accommodation.title %>" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose an accommodation title</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="accommodation[location]" value="<%= accommodation.location %>" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose an accommodation location</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" id="image" name="accommodation[image]" value="<%= accommodation.image %>" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose an accommodation image</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Accommodation Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input class="form-control" type="number" id="price" name="accommodation[price]" value="<%= accommodation.price %>" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please choose an accommodation price</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="accommodation[description]" required><%= accommodation.description %></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose an accommodation description</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update Accommodation</button>
      </div>
    </form>
    <a href="/accommodations/<%= accommodation._id %>">Back To Accommodation</a>
  </div>
</div>